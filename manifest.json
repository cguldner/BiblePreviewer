{
  "manifest_version": 2,
  "name": "Bible Previewer",
  "short_name": "BiblePreview",
  "author": "Cody Guldner",
  "description": "Turns every bible verse into a link you can hover over to see the contents of the verse.",
  "version": "0.1.0",
  "icons": {
    "16": "icons/bible16.png",
    "32": "icons/bible32.png",
    "64": "icons/bible64.png",
    "128": "icons/bible128.png"
  },
  "permissions": [
    "https://bibles.org/v2/"
  ],
  "browser_action": {
    "default_icon": "icons/bible16.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "css": [
        "biblePreviewer.css"
      ],
      "js": [
        "popper.js",
        "tooltip1.2.0.js",
        "biblePreviewer.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ]
}
